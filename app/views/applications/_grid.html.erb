<%= grid(@applications_grid) do |g|

  @now = Date.today

  g.column name: 'Edad', attribute: 'birthdate', filter_type: :rails_time_helper ,  assoc: :student do |application|
   @age = ((@now - application.student.birthdate)/365).to_i
    end

  g.column  name:  'Sexo', attribute: 'gender',  assoc: :student

  g.column  name:  'Paterno', attribute: 'last_name',  assoc: :student
  
  g.column  name:  'Materno', attribute: 'slast_name',  assoc: :student
   
  g.column  name:  'Nombres', attribute: 'names',  assoc: :student

  g.column name:  'Date', attribute: 'date'
  
  g.column name:  'School', attribute: 'school_name'
  
  g.column  name:  'School Year', attribute: 'school_year'
     
  g.column  name:  'Grade', attribute: 'grade'
  
  g.column  name:  'Level', attribute: 'level'
  
  g.column  name:  'Score', attribute: 'score'
  
  g.column  name:  'Grade', attribute: 'grade'
  
  g.column name:  'Other Scholarship', attribute: 'other_scholarship'
  
  g.column  name:  'From', attribute: 'from'
  
  g.column  name:  'Amount', attribute: 'amount'
  
  g.column  name:  'Approved', attribute: 'approved'

  g.column  name:  'Typesc', attribute: 'typesc'

  g.column  name:  'Shoe Size', attribute: 'shoe_size',  assoc: :student
  
  g.column  name:  'Notes', attribute: 'notes'
  
  
  
  
  g.column   do |application|
    link_to('Edit', edit_application_path(application))
  end
end -%>

