<%= grid(@students_grid) do |g|

  g.column name:  'Matricula', attribute: 'st_number'
  
  g.column name:  'Paterno', attribute: 'last_name'
  
  g.column  name:  'Materno', attribute: 'slast_name'
     
  g.column  name:  'Nombre(s)', attribute: 'names'

  @now = Date.today

  g.column name: 'Edad', attribute: 'birthdate', filter_type: :rails_time_helper  do |student|
    @age = ((@now - student.birthdate)/365).to_i
  end

  g.column  name:  'Typest', attribute: 'typest'

  g.column   do |student|
    link_to('Edit', edit_student_path(student))
  end

  g.column   do |student|
    link_to('Delete',  student,  method: :delete, data: { confirm: 'Are you sure?' })
  end
end -%>

